#!/bin/bash
script_dir="$(cd "$(dirname "$0")" && pwd)"
sudo -v
sudo pacman -Sy

config_picom() {
    sudo rm /etc/xdg/picom.conf
    cd $script_dir
    sudo cp picom.conf /etc/xdg/picom.conf
}

./yay/install
./apps/minimal-install

if [ "$1" == "extra" ]; then
    ./apps/extra-install
fi

./lock/install
./dunst/install
# config_picom
./xinitrc/install
./xfce4-terminal-config/install
./bumblebee-status/install
./i3/install
./oh-my-fish/install
./dark-theme/install
./neofetch/install
./neofetch/in-terminal/install
./nitrogen/install
./apps/browser/install
./redshift/install
